<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_cadet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragment.VaultFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.DarkNoActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="All Files"
                >
            </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/attachmentsRecyclerView"
        android:background="@color/space_cadet"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="55dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detailsFab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/dark_orange"
        android:layout_gravity="end|bottom"
        app:srcCompat="@drawable/ic_plus"
        app:layout_anchorGravity="center"
        tools:ignore="VectorDrawableCompat"
        app:useCompatPadding="true"
        android:contentDescription="TODO"
        app:fabCustomSize="50dp"
        app:maxImageSize="30dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="@dimen/tella_main_vertical"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>